<body>

  <div id="userButtons" style="text-align: center;">
    <button class="userButton active" value="일반">일반</button>
    <button class="userButton" id="psychological-button" value="심리">심리</button>
  </div>

  <div id="category-buttons" style="text-align: center;">
    <button class="category-button">오늘의 운세</button>
    <button class="category-button">연애</button>
    <button class="category-button">금전</button>
    <button class="category-button">직장</button>
  </div>
  
  <div class="container">
    
    <% 
      // 카드 ID 배열 생성 및 섞기
      let cardIds = Array.from({ length: 78 }, (_, i) => i);

      // Fisher-Yates Shuffle 알고리즘으로 카드 섞기
      for (let i = cardIds.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [cardIds[i], cardIds[j]] = [cardIds[j], cardIds[i]];
      }
    %>
    
    <div class="tarot-spread">
      <% cardIds.forEach(id => { %>
        <div class="card" data-card-id="<%= id %>">
          <div class="card-inner">
            <div class="card-back"></div>
            <div class="card-front">
              <!-- JavaScript에서 동적으로 이미지가 설정됩니다 -->
            </div>
          </div>
        </div>
      <% }); %>
    </div>
    
    <div class="button-container">
      <button id="draw-again">초기화</button>
      <button id="spread-cards">카드 펼치기</button>
    </div>
    
    <div id="selected-card-info"></div>

    <div class="selected-cards-container">
      <% for (let i = 1; i <= 3; i++) { %>
        <div class="selected-card" id="selected-card-<%= i %>">
          <div class="selected-card-inner">
            <div class="selected-card-back"></div>
            <div class="selected-card-front"></div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

  
  
  <br>
  <div class="interpretation-wrapper">
    <div class="interpretation-header">카드 해석</div>
    <div id="interpretationContent" class="interpretation-content">
      <!-- 카드 해석 내용이 여기에 동적으로 추가됩니다 -->
    </div>
  </div>
</body>
