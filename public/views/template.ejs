	<link rel="stylesheet" href="../css/main.css" />
	<noscript>
		<link rel="stylesheet" href="../css/noscript.css" />
	</noscript>
	<style>
		/* 로그인 회원가입 관련 css */
		#close {
			margin-right: 5px;
			margin-top: 5px;
			position: absolute;
			right: 0;
		}

		/* 로그인을 누를 시 팝업이 뜨면서 배경을 검게 만듬 */
		.background {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100vh;
			/* 색 및 투명도 조절 */
			background-color: rgba(0, 0, 0, 0.3);
			z-index: 1000;

			/* 숨기기 X */
			z-index: -1;
			opacity: 0;
		}

		.window {
			position: relative;
			width: 100%;
			height: 100%;
		}

		.popup_1 {
			position: absolute;
			top: 50%;
			left: 50%;
			transform: translate(-50%, -50%);
			background-color: rgba(255, 255, 255, 0.9);
			opacity: 1;
			box-shadow: 0 2px 7px rgba(0, 0, 0, 0.3);

			/* 임시 */
			width: 500px;
			height: 400px;

			/* 아래에 배치 */
			transform: translate(-50%, -40%);
		}

		.show {
			opacity: 1;
			z-index: 1000;
			transition: all .5s;
		}

		.show .popup_1 {
			transform: translate(-50%, -50%);
			transition: all .5s;
		}

		/* 회원가입의 아이디, 비밀번호, 닉네임 */
		#ruser,
		#rpass,
		#rnick,
		#confirmpass,
		#luser,
		#lpass {
			text-align: center;
			font-size: 18px;
		}

		.login-wrap {
			width: 100%;
			margin: auto;
			max-width: 525px;
			position: relative;
			box-shadow: 0 12px 15px 0 rgba(0, 0, 0, .24), 0 17px 50px 0 rgba(0, 0, 0, .19);
		}

		.login-html {
			padding: 5px 20px 0px 20px;
		}

		.login-html .sign-in,
		.login-html .sign-up,
		.login-form .group .check {
			display: none;
		}

		.login-html .sign-in-htm,
		.login-html .sign-up-htm {
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			position: absolute;
			transform: rotateY(180deg);
			backface-visibility: hidden;
			/* 회원가입과 로그인이 돌아가는 속도 조정 */
			transition: all .4s linear;
		}


		/* 로그인,회원가입 탭 css */
		.login-html .sign-in:checked+.tab,
		.login-html .sign-up:checked+.tab {
			border-color: #000000;
			color: #000000;
			margin-top: 5px;

		}

		.login-html .tab {
			color: #adb5bd;
			font-size: 22px;
			margin-right: 15px;
			padding-bottom: 5px;
			margin: 0 15px 10px 0;
			display: inline-block;
			border-bottom: 2px solid transparent;
		}

		.login-html .tab,
		.login-form .group .label,
		.login-form .group .button {
			text-transform: uppercase;
		}

		/* 로그인 버튼 div */
		#login_btn {
			margin-left: 20px;
			margin-right: 20px;
		}

		/* 로그인 버튼 */
		#login_btn>button {
			position: absolute;
			bottom: 20px;
			right: 0;
		}

		/* 가입하기 버튼 div */

		#submit_btn {
			margin-left: 20px;
			margin-right: 20px;
		}

		/* 가입하기 버튼 */

		#submit_btn>button {
			position: absolute;
			bottom: 20px;
			right: 0;
		}

		/* -3) 로그인/회원가입 폼 로그인/가입하기 버튼 css 끝 */

		/* 로그인 폼 */

		#lform, #rform{
			margin-bottom: 1em;
		}

		.login-form {
			min-height: 345px;
			position: relative;
			perspective: 1000px;
			transform-style: preserve-3d;
		}

		/* 로그인 폼 내부 class명 group의 세부 설정 값 */
		.login-form .group {
			margin-bottom: 15px;
		}

		.login-form .group .label,
		.login-form .group .input,
		.login-form .group .button {
			width: 100%;
			color: white;
			display: block;
		}

		.login-form .group .input,
		.login-form .group .button {
			border: none;
			padding: 10px 5px;
			border-radius: 10px;
			background-color: #212529;

		}

		.login-form .group input[data-type="password"] {
			-webkit-text-security: circle;
		}

		/* 로그인 화면 보여주는 코드 */
		.login-html .sign-in:checked+.tab+.sign-up+.tab+.login-form .sign-in-htm {
			transform: rotate(0);
		}

		/* 회원가입 화면 보여주는 코드 */
		.login-html .sign-up:checked+.tab+.login-form .sign-up-htm {
			transform: rotate(0);
		}
	</style>
</head>

<body class="is-preload">
	<!-- 로그인 버튼 -->
	<div id="login-button-container">
		<a href="#login" id="show">Login</a>
	</div>
	<!-- 회원가입/로그인 모달창 -->
	<div class="background">
		<div class="window">
			<div class="popup_1">
				<div class="login-wrap">
					<button id="close">x</button>
					<div class="login-html">
						<!-- 회원가입/로그인 탭 -->
						<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1"
							class="tab">로그인</label>
						<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2"
							class="tab">회원가입</label>

						<div class="login-form">
							<!-- 로그인 화면 -->
							<form id="lform">
								<div class="sign-in-htm">
									<!-- 아이디 입력 -->
									<div class="group">
										<input id="luser" name="mem_id" type="text" class="input"
											placeholder="아이디를 입력하세요." required>
									</div>
									<!-- 비밀번호 입력 -->
									<div class="group">
										<input id="lpass" name="mem_pw" type="password" class="input"
											data-type="password" placeholder="비밀번호를 입력하세요." required>
									</div>
									<!-- 로그인 버튼 -->
									<div class="group" id="login_btn">
										<button type="submit" value="Sign In">로그인</button>
									</div>
								</div>
							</form>

							<!-- 회원가입 화면 -->
							<form id="rform">
								<div class="sign-up-htm">
									<!-- 닉네임 -->
									<div class="group">
										<input id="rnick" name="mem_nick" type="text" class="input"
											placeholder="사용할 닉네임 입력" required>
									</div>
									<!-- 아이디 -->
									<div class="group">
										<input id="ruser" name="mem_id" type="text" class="input" placeholder="아이디 입력"
											required>
									</div>
									<!-- 비밀번호 -->
									<div class="group">
										<input id="rpass" name="mem_pw" type="password" class="input"
											data-type="password" placeholder="비밀번호 입력" required>
									</div>
									<!-- 비밀번호 확인 -->
									<div class="group">
										<input id="confirmpass" type="password" class="input" data-type="password"
											placeholder="비밀번호 재입력" required>
										<div id="message"></div>
									</div>
									<!-- 가입하기 -->
									<div class="group" id="submit_btn">
										<button type="submit" value="Sign Up">가입하기</button>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


	<!-- Wrapper-->
	<div id="wrapper">

		<!-- Nav -->
		<nav id="nav">
			<a href="#" class="icon solid fa-comment"><span>Chat Bot</span></a>
			<a href="#tarot" class="icon solid fa-sun"><span>Tarot</span></a>
			<a href="#mypage" class="icon solid fa-user"><span>MyPage</span></a>
		</nav>

		<!-- Main -->
		<div id="main">

			<!-- 홈(챗봇) -->
			<article id="home" class="panel intro">
				<%- include('home') %>
			</article>
						<!-- Me -->
							<article id="home" class="panel intro">
								<header>
									<h1>Chat Bot</h1>
									<p>your Mental Doctor</p>
								</header>
								<a href="#work" class="jumplink pic">
									<span class="arrow icon solid fa-chevron-right"><span>See my work</span></span>
									<img src="../img/me.jpg" alt="" />
								</a>
							</article>

			<!-- 타로카드 -->
			<article id="tarot" class="panel">
				<%- include('tarot') %>
			</article>

			<!-- 마이페이지 -->
			<article id="mypage" class="panel">
				<%- include('mypage') %>
			</article>

		</div>

		<!-- Footer -->
		<div id="footer">
			<ul class="copyright">
				<li>&copy; 스마트인재개발원</li>
				<li> MindRoad : 김현우 | 문승명 | 김형욱 | 오창선 | 김지성</li>
			</ul>
		</div>

	</div>

	<!-- Scripts -->
	<script src="../js/jquery.min.js"></script>
	<script src="../js/browser.min.js"></script>
	<script src="../js/breakpoints.min.js"></script>
	<script src="../js/util.js"></script>
	<script src="../js/main.js"></script>
	<script>
		// 로그인 / 회원가입 창 띄워주는 스크립트
		function show() {
			document.querySelector(".background").className = "background show";
		}
		// 로그인 / 회원가입 창을 취소를 눌러 끄는 스크립트
		function close() {
			document.querySelector(".background").className = "background";
		}
		// 클릭시 일어남
		document.querySelector("#show").addEventListener("click", show);
		document.querySelector("#close").addEventListener("click", close);
	</script>
</body>

</html>